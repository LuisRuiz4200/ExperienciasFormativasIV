@model Dominio.Entidad.MantenimientoModel

@{
    ViewBag.Title = "editarMantenimiento";
}

<h2>EDITAR MANTENIMIENTO</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Mantenimiento</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.id_mante, "ID MANTENIMIENTO:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.id_mante, new { htmlAttributes = new { @class = "form-control bg-secondary bg-opacity-25", @readOnly = "readonly" } })
                @Html.ValidationMessageFor(model => model.id_mante, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.cod_patrimonial, "COD PATRIMINIAL:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("cod_patrimonial", (SelectList)ViewBag.LISTAR_DET_EQUIPO, "SELECCION EQUIPO", new { @class = "form-control bg-secondary bg-opacity-25" })
                @Html.ValidationMessageFor(model => model.cod_patrimonial, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.cod_tecnico, "TÉCNICO:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("cod_tecnico", (SelectList)ViewBag.LISTA_TECNICO, "SELECCIONE TECNICO", new { @class = "form-control bg-secondary bg-opacity-25" })
                @Html.ValidationMessageFor(model => model.cod_tecnico, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.cod_tipoMante, "TIPO MANTENIMIENTO:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("cod_tipoMante", (SelectList)ViewBag.LISTA_TIPOMANTE, "SELECCIONE TIPO", new { @class = "form-control bg-secondary bg-opacity-25" })
                @Html.ValidationMessageFor(model => model.cod_tipoMante, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.obs_tipoMante, "OBSERVACIÓN MANTENIMIENTO:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.obs_tipoMante, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.obs_tipoMante, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.estado_equipo, "ESTADO DE EQUIPO:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.estado_equipo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.estado_equipo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.fecha_mante, "FECHA DE MANTENIMIENTO:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.fecha_mante, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                @Html.ValidationMessageFor(model => model.fecha_mante, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.estado_mante, "ESTADO DE MANTENIMIENTO:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.estado_mante, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.estado_mante, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Actualizar Mantenimiento" class="btn btn-success" />
                @Html.ActionLink("Regresar", "listarMantenimientos", null, new { @class = "btn btn-warning" })
            </div>
        </div>
    </div>
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>