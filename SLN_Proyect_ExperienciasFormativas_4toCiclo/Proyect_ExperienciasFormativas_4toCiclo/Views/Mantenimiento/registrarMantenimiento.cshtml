@model Dominio.Entidad.MantenimientoModel

@{
    ViewBag.Title = "Registrar Mantenimiento";
}

<h2>REGISTRAR MANTENIMIENTO</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="row gap-2 ">
    <h4>Datos necesarios</h4>
    <hr />

    @if (ViewBag.MENSAJE != null)
    {
        <div class="alert alert-warning">
            @ViewBag.MENSAJE
        </div>
    }

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group col-4">
        @Html.LabelFor(model => model.id_mante, "ID MANTENIMIENTO", htmlAttributes: new { @class = "control-label" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.id_mante, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            @Html.ValidationMessageFor(model => model.id_mante, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group col-4">
        @Html.LabelFor(model => model.estado_mante, "ESTADO DE MANTENIMIENTO:", htmlAttributes: new { @class = "control-label " })
        <div class="col-md-10">
            @Html.EditorFor(model => model.estado_mante, new { htmlAttributes = new { @class = "form-control", @readonly = "readonuly" } })
            @Html.ValidationMessageFor(model => model.estado_mante, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group col-4">
        @Html.LabelFor(model => model.fecha_mante, "FECHA DE MANTENIMIENTO:", htmlAttributes: new { @class = "control-label " })
        <div class="col-md-10">
            @Html.EditorFor(model => model.fecha_mante, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.fecha_mante, "", new { @class = "text-danger" })
        </div>
    </div>

    <hr />

    <div class="form-group col-4">
        @Html.LabelFor(model => model.cod_patrimonial, "COD PATRIMINIAL:", htmlAttributes: new { @class = "control-label" })
        <div class="col-md-10">
            @Html.DropDownList("cod_patrimonial", (SelectList)ViewBag.LISTAR_DET_EQUIPO, "SELECCION EQUIPO", new { @class = "form-control bg-secondary bg-opacity-25" })
            @Html.ValidationMessageFor(model => model.cod_patrimonial, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group col-4">
        @Html.LabelFor(model => model.cod_tecnico, "TÉCNICO:", htmlAttributes: new { @class = "control-label " })
        <div class="col-md-10">
            @Html.DropDownList("cod_tecnico", (SelectList)ViewBag.LISTA_TECNICO, "SELECCIONE TECNICO", new { @class = "form-control bg-secondary bg-opacity-25" })
            @Html.ValidationMessageFor(model => model.cod_tecnico, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group col-4">
        @Html.LabelFor(model => model.cod_tipoMante, "TIPO MANTENIMIENTO:", htmlAttributes: new { @class = "control-label" })
        <div class="col-md-10">
            @Html.DropDownList("cod_tipoMante", (SelectList)ViewBag.LISTA_TIPOMANTE, "SELECCIONE TIPO", new { @class = "form-control bg-secondary bg-opacity-25" })
            @Html.ValidationMessageFor(model => model.cod_tipoMante, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group col-4">
        @Html.LabelFor(model => model.estado_equipo, "ESTADO DE EQUIPO:", htmlAttributes: new { @class = "control-label " })
        <div class="col-md-10">
            @Html.EditorFor(model => model.estado_equipo, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.estado_equipo, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group col-4">
        @Html.LabelFor(model => model.obs_tipoMante, "OBSERVACIÓN MANTENIMIENTO:", htmlAttributes: new { @class = "control-label " })
        <div class="col-md-10">
            <textarea class="form-control" name="obs_tipoMante" rows="4" id="exampleFormControlTextarea1"></textarea>
            @Html.ValidationMessageFor(model => model.obs_tipoMante, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="REGISTRAR MANTENIMIENTO" class="btn btn-success" /> |
            @Html.ActionLink("IR A LA LISTA", "listarMantenimientos", null, new { @class = "btn btn-warning" })
        </div>
    </div>
</div>
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
