@model Dominio.Entidad.DetEquipoModel

@{
    ViewBag.Title = "registrarDetEquipo";
}

<h2>ACTUALIZAR NUEVO EQUIPO</h2>

<div class="row">

    <h4>Equipo</h4>
    <hr />

    <div class="col">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal row gap-2">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.cod_patrimonial, "COD PATRIMONIAL", htmlAttributes: new { @class = "control-label " })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.cod_patrimonial, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.cod_patrimonial, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.cod_equipo, "EQUIPO", htmlAttributes: new { @class = "control-label " })
                    <div class="col-md-10">
                        @Html.DropDownList("cod_equipo", (SelectList)ViewBag.LISTA_EQUIPO, "SELECCIONE EQUIPO", new { @class = "form-control bg-secondary bg-opacity-25" })
                        @Html.ValidationMessageFor(model => model.cod_equipo, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.cod_proveedor, "PROVEEDOR", htmlAttributes: new { @class = "control-label" })
                    <div class="col-md-10">
                        @Html.DropDownList("cod_proveedor", (SelectList)ViewBag.LISTA_PROVEEDOR, "SELECCIONE PROVEEDOR", new { @class = "form-control bg-secondary bg-opacity-25" })
                        @Html.ValidationMessageFor(model => model.cod_proveedor, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.fecha_ingreso, "FECHA DE INGRESO", htmlAttributes: new { @class = "control-label" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.fecha_ingreso, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.fecha_ingreso, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.estado_equipo, "ESTADO DE EQUIPO", htmlAttributes: new { @class = "control-label " })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.estado_equipo, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.estado_equipo, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="d-flex gap-2">
                        <input type="submit" value="ACTUALIZAR EQUIPO" class="btn btn-success" />
                        @Html.ActionLink("REGRESAR AL LISTADO", "listarDetEquipo", "", new { @class = "btn btn-warning" })
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="col">
        <div class="text-center">
            <img src="~/Content/EquipoBiomedicoImg/equipoBiomedico.png" />
        </div>
    </div>
</div>



<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
