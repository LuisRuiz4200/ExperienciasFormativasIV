<!DOCTYPE html>
<html>
<head>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js" integrity="sha384-qKXV1j0HvMUeCBQ+QVp7JcfGl760yU08IQ+GpUo5hlbpg51QRiuqHAJz8+BrxE/N" crossorigin="anonymous"></script>


    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <!--
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    -->



</head>
<body class="d-flex m-0 p-0">

    <div class="bg-dark position-sticky top-0 vh-100 p-0 d-flex flex-column ">
        
        <div class="d-flex flex-column h-100">
            <div class="navbar navbar-header m-2 ">

                <button type="button" class="navbar-toggle" data-bs-toggle="collapse" data-bs-target="#lista">
                    <img src="../Content/HISTORYMEDIC.png" width="80" height="80"/>
                </button>

                <h2 class="px-2 collapse col" id="lista">
                    @Html.ActionLink("HISTORY MEDIC", "", "", new { area = "" }, new { @class = "text-white text-decoration-none" })
                </h2>

            </div>
            
            <nav class="bg-success p-2 collapse mb-auto" id="lista">
                <ul class="navbar navbar-nav d-block">
                    <li class="dropdown ">
                        <a class="nav-link text-white" data-bs-toggle="dropdown" data-bs-target="" href="#">USUARIO</a>
                        <ul class="dropdown-menu bg-secondary">
                            <li>
                                <a class="dropdown-item" href="..\Usuario\registrarUsuario">REGISTRAR NUEVO USUARIO</a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="..\Usuario\listarUsuario">LISTAR USUARIO</a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="..\Usuario\login">SALIR DEL SISTEMA</a>
                            </li>
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a class="nav-link text-white" data-bs-toggle="dropdown" data-bs-target="" href="#">TECNICO</a>
                        <ul class="dropdown-menu bg-secondary">
                            <li>
                                <a class="dropdown-item" href="..\Tecnico\registrarTecnico">REGISTRAR TECNICO</a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="..\Tecnico\listarTecnico">CONSULTAR TECNICO</a>
                            </li>
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a class="nav-link text-white" data-bs-toggle="dropdown" data-bs-target="" href="#">EQUIPO</a>
                        <ul class="dropdown-menu bg-secondary">
                            <li>
                                <a class="dropdown-item" href="..\DetEquipo\registrarDetEquipo">REGISTRAR DETALLE EQUIPO</a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="..\DetEquipo\listarDetEquipo">CONSULTAR DETALLE EQUIPO</a>
                            </li>
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a class="nav-link text-white" data-bs-toggle="dropdown" data-bs-target="" href="#">MANTENIMIENTO</a>
                        <ul class="dropdown-menu bg-secondary ">
                            <li>
                                <a class="dropdown-item" href="..\Mantenimiento\registrarMantenimiento">REGISTRAR MANTENIMIENTO</a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="..\Mantenimiento\listarMantenimientos">CONSULTAR MANTENIMIENTO</a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </nav>

            <div class="text-white collapse" id="lista">
                <hr />
                    <h3 class="p-2">@ViewBag.USUARIO</h3>
            </div>
        </div>
    </div>

    @{
        String user = ViewBag.USUARIO;
    }


    <div class="position-fixed end-0 px-5 bg-secondary text-white table-bordered">
        <h3 class="my-4">
            @user
            <span class="glyphicon-apple"></span>
        </h3>
    </div>



    <div class="container">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - GRUPO 2 DE EXPERIENCIAS FORMATIVAS CIBERTEC</p>
        </footer>
    </div>

    <!--
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    -->

</body>
</html>