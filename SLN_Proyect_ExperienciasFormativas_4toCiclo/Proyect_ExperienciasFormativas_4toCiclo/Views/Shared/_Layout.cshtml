<!DOCTYPE html>
<html>
<head>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js" integrity="sha384-qKXV1j0HvMUeCBQ+QVp7JcfGl760yU08IQ+GpUo5hlbpg51QRiuqHAJz8+BrxE/N" crossorigin="anonymous"></script>


    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
 

</head>
<body class="d-flex m-0 p-0">
 
    <aside class="position-sticky top-0 vh-100 navbar-inverse col-md-2 p-0 d-flex flex-column ">

        <button type="button" class="navbar-toggle" data-bs-toggle="collapse" data-bs-target="#lista">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>

        <div class="navbar navbar-collapse collapse mb-auto p-0" id="lista">

            <div class="navbar-header nav-justified">
                <h2 class="px-4">

                    @Html.ActionLink("HISTORY MEDIC", "", "", new { area = "" }, new { @class = "text-white text-decoration-none" })

                </h2>

                <hr />

            </div>


            

            <div class="">

                <ul class=" nav navbar-nav nav-justified">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-bs-toggle="dropdown" data-bs-target="" href="#">USUARIO</a>
                        <ul class="dropdown-menu bg-success">
                            <li>
                                <a class="dropdown-item" href="..\Usuario\registrarUsuario">REGISTRAR NUEVO USUARIO</a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="..\Usuario\listarUsuario">LISTAR USUARIO</a>
                            </li>
                            <li>
                                <a href="..\Usuario\login">SALIR DEL SISTEMA</a>
                            </li>
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a class="dropdown-toggle" data-bs-toggle="dropdown" data-bs-target="" href="#">TECNICO</a>
                        <ul class="dropdown-menu bg-success">
                            <li>
                                <a class="dropdown-item" href="..\Tecnico\registrarTecnico">REGISTRAR TECNICO</a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="..\Tecnico\listarTecnico">CONSULTAR TECNICO</a>
                            </li>
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a class="dropdown-toggle" data-bs-toggle="dropdown" data-bs-target="" href="#">EQUIPO</a>
                        <ul class="dropdown-menu bg-success">
                            <li>
                                <a class="dropdown-item" href="..\DetEquipo\registrarDetEquipo">REGISTRAR DETALLE EQUIPO</a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="..\DetEquipo\listarDetEquipo">CONSULTAR DETALLE EQUIPO</a>
                            </li>
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a class="dropdown-toggle" data-bs-toggle="dropdown" data-bs-target="" href="#">MANTENIMIENTO</a>
                        <ul class="dropdown-menu bg-success ">
                            <li>
                                <a href="..\Mantenimiento\registrarMantenimiento">REGISTRAR MANTENIMIENTO</a>
                            </li>
                            <li>
                                <a href="..\Mantenimiento\listarMantenimientos">CONSULTAR MANTENIMIENTO</a>
                            </li>
                        </ul>
                    </li>

                </ul>
            </div>

            <div class="text-white d-block position-absolute bottom-0 w-100">
                <hr />
                <h3 class="px-4">USUARIO</h3>
            </div>
        </div>

        
    </aside>

    @{
        String user = ViewBag.USUARIO;
    }


    <div class="position-fixed end-0 px-5 bg-secondary text-white table-bordered">
        <h3 class="my-4">
            @user
            <span class="glyphicon-apple"></span>
        </h3>
    </div>



    <div class="container">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - GRUPO 2 DE EXPERIENCIAS FORMATIVAS CIBERTEC</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>