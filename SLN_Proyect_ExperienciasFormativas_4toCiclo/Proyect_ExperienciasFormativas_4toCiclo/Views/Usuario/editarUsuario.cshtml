@model Dominio.Entidad.UsuarioModel

@{
    ViewBag.Title = "editarUsuario";
}

<h2>ACTUALIZAR NUEVO USUARIO</h2>

<div class="row">

    <h4>INGRESE LOS NUEVOS DATOS A ACTUALIZAR</h4>
    <hr />

    <div class="col">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal row gap-2">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.cod_usuario, "COD USUARIO", htmlAttributes: new { @class = "control-label" })
                    <div class="col-lg-4">
                        @Html.EditorFor(model => model.cod_usuario, new { htmlAttributes = new { @class = "form-control bg-secondary bg-opacity-25 ", placeholder = ViewBag.CODIGO_USUARIO, @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.cod_usuario, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.nom_usuario, "NOMBRE DE USUARIO", htmlAttributes: new { @class = "control-label c" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.nom_usuario, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.nom_usuario, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ape_usuario, "APELLIDO DE USUARIO", htmlAttributes: new { @class = "control-label " })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.ape_usuario, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ape_usuario, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.pass_usuario, "PASSWORD", htmlAttributes: new { @class = "control-label " })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.pass_usuario, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.pass_usuario, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.tipo_usuario, "TIPO DE USUARIO", htmlAttributes: new { @class = "control-label " })
                    <div class="col-md-6">
                        @Html.DropDownList("tipo_usuario", (SelectList)ViewBag.LISTA_TIPOUSUARIO, "SELECCIONE TIPO", new { @class = "form-control bg-secondary bg-opacity-25" })
                        @Html.ValidationMessageFor(model => model.tipo_usuario, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group ">
                    <div class="d-flex gap-2">
                        <input type="submit" value="ACTUALIZAR USUARIO" class="btn btn-success" />
                        @Html.ActionLink("IR A LA LISTA", "ListarUsuario", "", new { @class = "btn btn-warning" })
                    </div>
                </div>
            </div>
        }

        @if (ViewBag.MENSAJE != null)
        {
            <div class="alert alert-warning">

                @ViewBag.MENSAJE

            </div>
        }
    </div>

    <div class="col">
        <div class="text-center">
            <img src="~/Content/UsuarioImg/usuario.png" />
        </div>
    </div>
</div>





<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
