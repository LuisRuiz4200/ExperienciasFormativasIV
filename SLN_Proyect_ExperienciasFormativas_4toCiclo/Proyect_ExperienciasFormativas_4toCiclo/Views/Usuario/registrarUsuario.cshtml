@model Dominio.Entidad.UsuarioModel

@{
    ViewBag.Title = "registrarUsuario";
}

<h2>registrarUsuario</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal col-md-6">
        <h4>UsuarioModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.cod_usuario, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.cod_usuario, new { htmlAttributes = new { @class = "form-control bg-secondary bg-opacity-25 ", placeholder=ViewBag.CODIGO_USUARIO,@readonly="readonly"} })
                @Html.ValidationMessageFor(model => model.cod_usuario, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.nom_usuario, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.nom_usuario, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nom_usuario, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ape_usuario, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.ape_usuario, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ape_usuario, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.pass_usuario, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.pass_usuario, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.pass_usuario, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.tipo_usuario, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.DropDownList("tipo_usuario",(SelectList)ViewBag.LISTA_TIPOUSUARIO,"SELECCIONE TIPO",new { @class="form-control bg-secondary bg-opacity-25"})
                @Html.ValidationMessageFor(model => model.tipo_usuario, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group d-flex my-2">
            <div class="col-md-offset-2 ">
                <input type="submit" value="REGISTRAR USUARIO" class="btn btn-success" />
                |
                @Html.ActionLink("IR A LA LISTA", "ListarUsuario", "", new { @class = "btn btn-warning" })
            </div>
        </div>
    </div>
}

@if (ViewBag.MENSAJE != null) 
{
    <div class="alert alert-warning">

        @ViewBag.MENSAJE

    </div>
}



<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
