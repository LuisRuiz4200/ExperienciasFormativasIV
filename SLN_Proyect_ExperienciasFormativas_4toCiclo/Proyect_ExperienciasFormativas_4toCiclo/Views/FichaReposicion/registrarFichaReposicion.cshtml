@model Dominio.Entidad.FichaReposicionModel

@{
    ViewBag.Title = "registrarFichaReposicion";
}
<hr />
<h2 style="text-align:center">REGISTRO DE FICHA PARA REPOSICION</h2>

<div class="row">
    <hr />
    <br />
    <h4>COMPLETE FORMULARIO</h4>
    <br />
    <br />

    <div class="col">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
        <div class="form-horizontal row gap-2">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.id_fichaRepo, "ID FICHA DE REPOSICION:", htmlAttributes: new { @class = "control-label" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.id_fichaRepo, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.id_fichaRepo, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group col-md-6">
                    @Html.LabelFor(model => model.fecha_fichaRepo, "FECHA DE REGISTRO:", htmlAttributes: new { @class = "control-label" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.fecha_fichaRepo, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.fecha_fichaRepo, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group col-md-8">
                @Html.LabelFor(model => model.cod_patrimonial, "CODIGO PATRIMONIAL:", htmlAttributes: new { @class = "control-label" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.cod_patrimonial, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.cod_patrimonial, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-md-8">
                @Html.LabelFor(model => model.motivo_fichaRepo, "MOTIVO:", htmlAttributes: new { @class = "control-label" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.motivo_fichaRepo, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.motivo_fichaRepo, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-md-8">
                @Html.LabelFor(model => model.estado_fichaRepo, "ESTADO:", htmlAttributes: new { @class = "control-label" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.estado_fichaRepo, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.estado_fichaRepo, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div class="form-group" style="text-align:center">
                <div class="col-md-offset-2 col-md-8">
                    <input type="submit" value="REGISTRAR FICHA" class="btn btn-success" /> |
                    @Html.ActionLink("IR A LA LISTA", "listarFichaReposicion", "", new { @class = "btn btn-warning" })
                </div>
            </div>
            @if (ViewBag.MENSAJE != null)
            {
                <div class="alert alert-warning">
                    @ViewBag.MENSAJE
                </div>
            }
        </div>
        }



    </div>


</div>



<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
