@model Dominio.Entidad.TecnicoModel

@{
    ViewBag.Title = "registrarTecnico";
}

<h2>REGISTRAR TECNICO</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal col-md-6">
        <h4>Ingrese los datos del técnico</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.cod_tecnico, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.cod_tecnico, new { htmlAttributes = new { @class = "form-control bg-secondary bg-opacity-25" ,placeholder = ViewBag.CODIGO_TECNICO, @readonly="readonly"} })
                @Html.ValidationMessageFor(model => model.cod_tecnico, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.nom_tecnico, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.nom_tecnico, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nom_tecnico, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ape_tecnico, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ape_tecnico, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ape_tecnico, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group my-2">
            <div class=" col-md-10">
                <input type="submit" value="REGISTRAR TECNICO" class="btn btn-success" />
                |
                @Html.ActionLink("IR A LA LISTA", "listarTecnico", null, new { @class = "btn btn-warning" })

            </div>
            
        </div>
    </div>
}

    @if (ViewBag.MENSAJE != null)
    {
        <div class="alert alert-warning">
            @Html.ViewBag.MENSAJE
        </div>
        
    }




<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
